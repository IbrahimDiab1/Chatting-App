<HBox style="-fx-border-radius: 10; -fx-border-color: #E0E0E0;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.liqaa.client.controllers.FXMLcontrollers.components.NotificationCard1Controller">
