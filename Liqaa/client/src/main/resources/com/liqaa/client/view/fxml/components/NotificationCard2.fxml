<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<HBox style="-fx-border-radius: 10; -fx-border-color: #E0E0E0;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.liqaa.client.controllers.FXMLcontrollers.components.NotificationCard2Controller">
    <children>
        <AnchorPane prefHeight="90.0" prefWidth="600.0">
            <children>
                <Circle fx:id="senderPhoto" fill="DODGERBLUE" layoutX="31.0" layoutY="44.0" radius="17.0" stroke="BLACK" strokeType="INSIDE" />
                <Label fx:id="notificationTitle" layoutX="60.0" layoutY="14.0" text="Aya sent you an invitation request">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <Label fx:id="notificationDate" layoutX="60.0" layoutY="47.0" text="on January 16, 2025 at 6:00 pm" textFill="#918d8d">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            <Button fx:id="acceptBtn" layoutX="461.0" layoutY="32.0" mnemonicParsing="false" onAction="#acceptAction" style="-fx-background-color: green;" text="Accept" textFill="WHITE" />
            <Button fx:id="declineBtn" layoutX="530.0" layoutY="32.0" mnemonicParsing="false" onAction="#declineAction" style="-fx-background-color: gray;" text="Decline" textFill="WHITE" />
            </children>
        </AnchorPane>
    </children>
</HBox>
